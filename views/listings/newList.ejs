<% layout("/layouts/boilerplate.ejs") %>

    <body>
        <div class="row">
            <div class="col-8 offset-3">
                <div class="newlist">
                    <form method="post" action="/listings/new?_method=put">
                        <h2>Create new list</h2>
                        <div class="input mb-3">
                            <label for="title" class="form-label">Title</label>
                            <input type="text" name="listing[title]" id="" class="form-control" placeholder="Enter a title">
                        </div>
                        <div class="input mb-3">
                            <label for="description" class="form-label">Description</label>
                            <textarea name="listing[description]" id="" class="form-control" rows="1" placeholder="Write description about image"></textarea>
                        </div>
                        <div class="input mb-3">
                            <label for="image-url" class="form-label">Image url</label>
                            <input type="text" name="listing[url]" class="form-control" placeholder="Enter image url">
                        </div>
                        <div class="input mb-3">
                            <label for="" class="filename">Filename</label>
                            <input type="text" name="listing[filename]" class="form-control" placeholder="image name">
                        </div>

                        <div class="row">
                            <div class="input mb-3 col-4">
                                <label for="price" class="form-label">Price</label>
                                <input type="number" name="listing[price]" id="" class="form-control" placeholder="5000">
                            </div>
                            <div class="input mb-3 col-8">
                                <label for="location" class="form-label">Location</label>
                                <input type="text" name="listing[location]" class="form-control" placeholder="Delhi">
                            </div>
                        </div>
                        <div class="input mb-3">
                            <label for="country" class="form-label">Country</label>
                            <input type="text" name="listing[country]" class="form-control" placeholder="India">
                        </div>

                        <button class="btn btn-dark">submit</button>
                    </form>
                </div>
            </div>
        </div>
    </body>