<% layout("/layouts/boilerplate.ejs") %>

    <body>
        <div class="row">
            <div class="col-8 offset-3">
                <div class="newlist">
                    <form method="post" action="/listings/new?_method=post" class="needs-validation" enctype="multipart/form-data" novalidate>
                        <p>Create new list</p>
                        <div class="input mb-3">
                            <label for="title" class="form-label">Title</label>
                            <input type="text" name="listing[title]" id="" class="form-control"
                                placeholder="Enter a title" required>
                            <div class="invalid-feedback">
                                Please select a valid title.
                            </div>
                        </div>

                        <div class="input mb-3">
                            <label for="description" class="form-label">Description</label>
                            <textarea name="listing[description]" id="" class="form-control" rows="1"
                                placeholder="Write description about image" required></textarea>
                            <div class="invalid-feedback">
                                Please select a valid description.
                            </div>
                        </div>
                        <div class="input mb-3">
                            <label for="image-url" class="form-label">Upload Image</label>
                            <input type="file" multiple accept="image/*" name="listing[image]" class="form-control"
                                placeholder="Upload image" required>
                                <div class="invalid-feedback">
                                    atleast upload 1 image
                                </div>
                        </div>
                        <div class="row">
                            <div class="input mb-3 col-4">
                                <label for="price" class="form-label">Price</label>
                                <input type="number" name="listing[price]" id="" class="form-control" placeholder="5000"
                                    required>
                                <div class="invalid-feedback">
                                    Please select a valid price.
                                </div>
                            </div>

                            <div class="input mb-3 col-8">
                                <label for="location" class="form-label">Location</label>
                                <input type="text" name="listing[location]" class="form-control" placeholder="Delhi"
                                    required>
                                <div class="invalid-feedback">
                                    Please select a valid location.
                                </div>
                            </div>

                        </div>
                        <div class="input mb-3">
                            <label for="country" class="form-label">Country</label>
                            <input type="text" name="listing[country]" class="form-control" placeholder="India"
                                required>
                            <div class="invalid-feedback">
                                Please select a valid country.
                            </div>
                        </div>


                        <button class="btn btn-dark">submit</button>
                    </form>
                </div>
            </div>
        </div>
    </body>