<% layout("/layouts/boilerplate.ejs") %>

    <body>
        <div class="row">
            <div class="col-8 offset-3">
                <div class="uplist">
                    <form method="post" action="/listings/<%= onelist._id %>/update?_method=put">
                        <h2>update your list</h2>
                        <div class="input mb-3">
                            <label for="title" class="form-label">Title</label>
                            <input type="text" name="listing[title]" id="" class="form-control"
                                value="<%= onelist.title %>">
                        </div>
                        <div class="input mb-3">
                            <label for="description" class="form-label">Description</label>
                            <textarea name="listing[description]" id="" class="form-control"
                                rows="3"><%= onelist.description %></textarea>
                        </div>
                        <div class="input mb-3">
                            <label for="image-url" class="form-label">Image url</label>
                            <input type="text" name="listing[url]" class="form-control"
                                placeholder="Enter new image url">
                        </div>

                        <div class="row">
                            <div class="input mb-3 col-4">
                                <label for="price" class="form-label">Price</label>
                                <input type="number" name="listing[price]" id="" class="form-control"
                                    value="<%= onelist.price %>">
                            </div>
                            <div class="input mb-3 col-8">
                                <label for="location" class="form-label">Your Location</label>
                                <input type="text" name="listing[location]" class="form-control"
                                    value="<%= onelist.location %>">
                            </div>
                        </div>
                        <div class="input mb-3">
                            <label for="country" class="form-label">Country</label>
                            <input type="text" name="listing[country]" class="form-control"
                                value="<%= onelist.country %>">
                        </div>

                        <button class="btn btn-dark">submit</button>
                    </form>
                </div>
            </div>
        </div>


        </form>
    </body>